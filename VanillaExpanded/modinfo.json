{
    "$schema": "https://moddbcdn.vintagestory.at/schema/modinfo.latest.json",
    "type": "Code",
    "side": "Universal",
    "modid": "vanillaexpanded",
    "name": "VanillaExpanded",
    "authors": [
        "Sisco++"
    ],
    "description": "Aims to add quality-of-life enhancements, missing functionality, and minor bug fixes while remaining true to the vanilla game and with minimal impacts to game balance.",
    "version": "1.0.4",
    "dependencies": {
        "game": "1.21.0"
    },
    "requiredOnClient": true,
    "requiredOnServer": true,
    "website": "https://github.com/dsisco11/VanillaExpanded",
    "worldConfigAttributes": [
        {
            "category": "spawnndeath",
            "code": "veDeathPenalty",
            "dataType": "dropdown",
            "values": ["vanilla", "bag", "unequipped", "all"],
            "names": ["Vanilla (use game setting)", "Lose bag items only", "Lose unequipped items", "Lose all items"],
            "default": "vanilla"
        },
        {
            "category": "spawnndeath",
            "code": "veToolDuraLoss",
            "dataType": "dropdown",
            "values": ["0", "5", "10", "15", "20", "25", "50"],
            "names": ["None", "5%", "10%", "15%", "20%", "25%", "50%"],
            "default": "0"
        }
    ]
}